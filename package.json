{
  "name": "cenote-api-server",
  "version": "0.1.0",
  "private": true,
  "description": "API server & web client used by cenote",
  "homepage": "https://github.com/AuthEceSoftEng/cenote-api#readme",
  "bugs": {
    "url": "https://github.com/AuthEceSoftEng/cenote-api/issues"
  },
  "repository": "github:AuthEceSoftEng/cenote-api",
  "license": "MIT",
  "author": {
    "name": "Napoleon Oikonomou",
    "email": "Napoleonoikon@gmail.com",
    "url": "https://iamnapo.me"
  },
  "scripts": {
    "build": "concurrently \"npm run docs\" \"npm run build --prefix=\"./client\"\"",
    "clean": "concurrently \"del-cli node_modules && npm i\" \"npm run clean --prefix=\"./client\"\"",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run open:src --prefix=\"./client\"",
    "dev:server": "nodemon server",
    "docs": "apidoc -i server/ -o docs/ && cpy ./client/src/favicon.ico ./docs/img/",
    "postinstall": "npm i --prefix=\"./client\"",
    "lint": "concurrently \"npm run lint:server\" \"npm run lint:client\"",
    "lint:client": "npm run lint --prefix=\"./client\"",
    "lint:server": "eslint server/**/*.js --fix",
    "start": "node server",
    "test": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:client": "npm test --prefix=\"./client\"",
    "test:server": "jest server --forceExit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run docs && git add docs/*"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.{js}"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "testURL": "http://localhost"
  },
  "dependencies": {
    "apidoc": "^0.17.7",
    "async-redis": "^1.1.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "chrono-node": "^1.3.11",
    "compression": "^1.7.4",
    "connect-mongodb-session": "^2.1.1",
    "dotenv": "^8.0.0",
    "execa": "^1.0.0",
    "express": "^4.17.0",
    "express-session": "^1.16.1",
    "kafka-node": "^4.1.3",
    "moment": "^2.24.0",
    "mongoose": "^5.5.10",
    "mongoose-auto-increment-reworked": "^1.2.1",
    "mongoose-immutable": "^0.0.2",
    "morgan": "^1.9.1",
    "nodemailer": "^6.1.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "ramda": "^0.26.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "cpy-cli": "^2.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-iamnapo": "^1.0.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">=10"
  },
  "apidoc": {
    "title": "cenote API",
    "url": "https://cenote.sidero.services/api",
    "template": {
      "forceLanguage": "en",
      "withCompare": false,
      "withGenerator": false
    }
  }
}
